<%- include('../partials/navbar') %>

<div class="mt-4 flex flex-col gap-4 py-12">
  <% if (typeof error != 'undefined') { %>
  <div class="bg-red-200 p-4 rounded-lg border-[1px] border-red-400">
    <p class="text-sm font-medium"><%= error %></p>
  </div>
  <%} else {%>
  <div class="flex flex-col gap-2 items-center justify-center ">
    <h1 class="text-center text-xl sm:text-3xl font-bold"><%= note.Title %></h1>
    <span class="font-medium text-sm"><%= note.UpdatedAt.toLocaleDateString("en-US", { weekday: 'short', year: 'numeric', month: 'long', day: 'numeric' }) %></span>
  </div>
  <img class="w-full h-full max-h-96 object-cover rounded-lg" src="<%= note.ImageUrl %>" alt="<%= note.Title %>">
  <div id="_content" class="flex flex-col w-full px-4">
    <%- note.Content %>
  </div>
  <%}%>
  </div>

<%- include('../partials/footer') %>