<%- include('../partials/navbar') %>

<div class="mt-4 flex flex-col gap-4">
  <% if (typeof error != 'undefined') { %>
  <div class="bg-red-200 p-4 rounded-lg border-[1px] border-red-400">
    <p class="text-sm font-medium"><%= error %></p>
  </div>
  <% } else {%>
  <div class="grid gap-2 sm:grid-cols-4 sm:auto-rows-[14rem]">
    <div class="relative sm:col-span-3 sm:row-span-2 rounded-lg overflow-hidden border-2 border-[#af8181]/60">
      <img class="w-full h-64 sm:h-full object-cover" src="/img/profile-picture.jpg" alt="" />
      <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black"></div>
      <div class="absolute inset-0 flex flex-col gap-2 justify-end items-start p-3 sm:p-8">
        <h1 class="text-white font-bold text-xl sm:text-4xl line-clamp-3 w-44 sm:w-auto">
          Muhammad Rizal Rusdiansyah
        </h1>
        <div class="font-light text-white sm:text-2xl flex flex-col gap-1">
          <h4>Backend Engineer at Runsystem</h4>
          <div><i class="bx bxs-map"></i> <span>South Jakarta</span></div>
        </div>
      </div>
    </div>
    <!--  -->
    <% notes.forEach(note => { %>
    <%- include('../partials/notesCard', {note}) %>
    <% }) %>
  </div>

  <div class="w-full flex justify-center">
    <a href="/notes" class="rounded-full px-4 py-2 border-2 border-black text-sm font-bold">More <i class="bx bx-right-arrow-alt font-bold"></i></a>
  </div>

  <%}%>
</div>

<%- include('../partials/footer') %>